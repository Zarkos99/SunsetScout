<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/primary_background"
    android:fitsSystemWindows="true"
    tools:context=".data.SunsetPostCreationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="New Sunset:"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/add_new_image_view"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/default_profile_pic" />


    <!--    Title input field-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Title:" />

        <EditText
            android:id="@+id/title_input_field"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/input_field"
            android:gravity="center"
            android:textColorHint="@color/primary_background"
            android:textSize="24sp" />
    </RelativeLayout>

    <!--    Latitude input field-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Latitude:" />

        <EditText
            android:id="@+id/latitude_input_field"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/input_field"
            android:gravity="center"
            android:textColorHint="@color/primary_background"
            android:textSize="24sp" />
    </RelativeLayout>

    <!--    Longitude input field-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Longitude:" />

        <EditText
            android:id="@+id/longitude_input_field"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/input_field"
            android:gravity="center"
            android:textColorHint="@color/primary_background"
            android:textSize="24sp" />
    </RelativeLayout>

    <!--    Longitude input field-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Description:" />

        <EditText
            android:id="@+id/description_input_field"
            android:layout_width="260sp"
            android:layout_height="150sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/input_field"
            android:gravity="center"
            android:textColorHint="@color/primary_background"
            android:textSize="24sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="30sp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/create_new_post_button"
            android:layout_marginEnd="10sp"
            android:text="Cancel" />

        <Button
            android:id="@+id/create_new_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Create" />

    </RelativeLayout>

</LinearLayout>