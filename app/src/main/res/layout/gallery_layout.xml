<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/primary_background"
    tools:context=".GalleryActivity">

    <!--    User Details  -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="top"
        android:background="@color/primary_background"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <!--        public username display -->
        <TextView
            android:id="@+id/public_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TODO: REPLACE THIS WITH PUBLIC USERNAME"
            android:textColor="@color/white" />

        <!--        TODO: replace text with number of posts -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/primary_background"
            android:fitsSystemWindows="true">

            <TextView
                android:id="@+id/num_posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TODO: REPLACE WITH num_posts"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sunsets"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--        TODO: replace text with biography-->
        <TextView
            android:id="@+id/biography"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:text="TODO: REPLACE WITH BIOGRAPHY VARIABLE"
            android:textColor="@color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_sunset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="15dp"
            android:contentDescription="Add sunset post to gallery"
            app:srcCompat="@android:drawable/btn_plus" />
    </FrameLayout>

    <!--    Gallery of Sunset Posts-->
    <!--    2D RecyclerView of personal user posted sunsets-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gallery_sunsets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:elevation="0dp"
            tools:listitem="@layout/sunset_gallery_item" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!--    Navigation Bar -->
    <!--    TODO: Find a way to make this generic and import it in the other layouts -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/primary_background">
            <!-- Navigation buttons -->
            <Button
                android:id="@+id/preferences_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:hint="SETTINGS"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/geo_map_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"

                android:hint="GEO"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/gallery_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:hint="GALLERY"
                android:textColorHint="@color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>